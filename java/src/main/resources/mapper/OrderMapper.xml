<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.csu.mypetstore.persistence.OrderMapper">
    <select id="getOrder" resultType="Order" parameterType="int">
    SELECT *
    FROM ORDERS
    WHERE ORDERID = #{value}
  </select>

    <select id="gerRecentOrder" resultType="Order">
        SELECT *
        FROM ORDERS
        WHERE USERNAME = #{username}
        ORDER BY ODERID
        DESC LIMIT 1;
    </select>

    <select id="getOrdersByUsername" parameterType="string" resultType="Order">
    SELECT *
    FROM ORDERS
    WHERE USERNAME = #{username}
    ORDER BY ORDERDATE;
  </select>

  <insert id="insertOrder" parameterType="order">
    INSERT INTO ORDERS
    VALUES(#{username}, #{orderDate}, #{totalPrice}, #{paid}, #{sendTo});
  </insert>


  <select id="getOrderId" resultType="int" >
    SELECT
        ORDERID
    FROM ORDERS
    WHERE USERNAME = #{username}
    ORDER BY ORDERID
    DESC LIMIT 1
  </select>

    <update id="updatePaid">
        UPDATE ORDERS
        SET PAID = #{paid}
        WHERE ORDERID = #{orderId};
    </update>
</mapper>