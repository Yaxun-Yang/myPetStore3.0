<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.csu.mypetstore.persistence.AccountMapper">
    <select id="getUserByUsername"  resultType="User">
       SELECT *
       FROM USERS
       WHERE USERNAME = #{username};
    </select>

    <select id="getUserByUsernameAndPassword"  resultType="User">
       SELECT *
       FROM USERS
       WHERE USERNAME = #{username}
       AND PASSWORD = #{password};
    </select>

    <update id="updateUser" >
        UPDATE USERS
        SET
            PASSWORD = #{password},
            EMAIL = #{email},
            ADDRESS = #{address},
            PHONE = #{phone},
            URL = #{url}
        WHERE USERNAME = #{username};
    </update>

    <insert id="insertUser" >
        INSERT INTO USERS
        VALUES(#{username}, #{password}, #{email}, #{address}, #{phone}, #{url});
    </insert>


    <update id="updateAdmin" >
        UPDATE ADMIN SET
            PASSWORD = #{password},
            PHONE = #{phone},
            URL = #{url}
        WHERE USERNAME = #{username};
    </update>

    <insert id="insertAdmin" >
        INSERT INTO ADMIN
        VALUES (#{password}, #{username}, #{phone}, #{url});
    </insert>

    <select id="getAdminByUsernameAndPassword" resultType="Admin">
        SELECT  *
        FROM  ADMIN
        WHERE USERNAME = #{username}
        AND PASSWORD = #{password};
    </select>

    <select id="getAdminByUsername" resultType="Admin">
        SELECT *
        FROM ADMIN
        WHERE USERNAME = #{username};
    </select>
</mapper>